<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.menu.MenuFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:clickable="true"
        android:id="@+id/to_pelanggaran"
        android:background="@drawable/bottom_border_line"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lihat Pelanggaran"
            android:textColor="#FF6B6B"
            android:textSize="24sp"
            android:textStyle="bold"
            android:padding="20dp"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:id="@+id/to_prestasi"
        android:clickable="true"
        android:background="@drawable/bottom_border_line"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lihat Prestasi"

            android:textColor="#50BC54"
            android:textSize="24sp"
            android:textStyle="bold"
            android:padding="20dp"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:clickable="true"
        android:id="@+id/to_tugas"
        android:background="@drawable/bottom_border_line"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lihat Tugas"
                android:textColor="#477CAC"
            android:textSize="24sp"
            android:textStyle="bold"
            android:padding="20dp"
            />



    </LinearLayout>

</LinearLayout>